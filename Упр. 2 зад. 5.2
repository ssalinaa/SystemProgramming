#include <stdio.h>
#include <unistd.h>
#include <fcntl.h>

#define BUFFER_SIZE 16

int main() {

     char buffer[BUFFER_SIZE + 1];
     int fd = open("aa", O_RDONLY);
     if(fd == -1) {
        perror("Cannot open file 'aa'.\n");
        return 1;
     }
     ssize_t bytes_read;
     int i;
     for(i = 5; i > 0; i--) {
         lseek(fd, 3, 0);
         bytes_read = read(fd, buffer, BUFFER_SIZE);
         write(1, buffer, bytes_read);
         printf("\n");
     }
     close(fd);
     return 0;
}
